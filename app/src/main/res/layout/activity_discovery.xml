<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Barra de búsqueda -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Buscar videojuegos..." />

    <!-- Contenedor de filtros -->
    <LinearLayout
        android:id="@+id/filter_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Filtro por género -->
        <Spinner
            android:id="@+id/spinner_genre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:prompt="@string/genre_prompt" />

        <!-- Filtro por plataforma -->
        <Spinner
            android:id="@+id/spinner_platform"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:prompt="@string/platform_prompt" />

        <!-- Filtro por fecha -->
        <Spinner
            android:id="@+id/spinner_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:prompt="@string/date_prompt" />
    </LinearLayout>

    <Button
        android:id="@+id/fetch_games_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fetch Games" />

    <!-- Lista de Resultados -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_games"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp" />

</LinearLayout>
