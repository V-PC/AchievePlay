        android:label="@string/app_name"
        android:roundIcon="@mipmap/aplogo_peq_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AchievePlay"
        tools:targetApi="31">
        <activity
            android:name=".ui.view.OtherUserProfile"
