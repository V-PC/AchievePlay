        <activity
            android:name=".ui.view.ManualActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.UserProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.DiscoveryActivity"
            android:exported="false" />
        <activity android:name=".ui.view.GameDetailsActivity" />
        <activity
            android:name=".ui.view.ProfileCreationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".ui.view.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>